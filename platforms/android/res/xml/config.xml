<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.krakow.uek.dev.uekroom" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <splash src="www/img/splash.png" />
    <name>UEKRoom</name>
    <description>
        Application for checking room availability at the Cracow University of Economics.
    </description>
    <author href="dev.uek.krakow.pl">Maciej Komorowski</author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="www/img/icon.png" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="ActivityIndicator">
        <param name="android-package" value="org.apache.cordova.plugin.ActivityIndicator" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
</widget>

<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.krakow.uek.dev.uekroom" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UEKRoom</name>
    <description>
        Application for checking room availability at the Cracow University of Economics.
    </description>
    <author href="dev.uek.krakow.pl">Mateusz ZajÄ…c</author>
    <author href="dev.uek.krakow.pl">Maciej Komorowski</author>
    <content src="index.html" />
    <access origin="*" />

    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#000000"/>
    <preference name="StatusBarStyle" value="lightcontent" />

    <icon src="www/img/icon.png" />
    
    <platform name="android">
        <splash src="www/img/splash.png" density="land-hdpi"/>
        <splash src="www/img/splash.png" density="land-ldpi"/>
        <splash src="www/img/splash.png" density="land-mdpi"/>
        <splash src="www/img/splash.png" density="land-xhdpi"/>
        <splash src="www/img/splash.png" density="port-hdpi"/>
        <splash src="www/img/splash.png" density="port-ldpi"/>
        <splash src="www/img/splash.png" density="port-mdpi"/>
        <splash src="www/img/splash.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <splash src="www/img/splash.png" width="320" height="480"/>
        <splash src="www/img/splash.png" width="640" height="960"/>
        <splash src="www/img/splash.png" width="768" height="1024"/>
        <splash src="www/img/splash.png" width="1536" height="2048"/>
        <splash src="www/img/splash.png" width="1024" height="768"/>
        <splash src="www/img/splash.png" width="2048" height="1536"/>
        <splash src="www/img/splash.png" width="640" height="1136"/>
        <splash src="www/img/splash.png" width="750" height="1334"/>
        <splash src="www/img/splash.png" width="1242" height="2208"/>
        <splash src="www/img/splash.png" width="2208" height="1242"/>
    </platform>
</widget>
